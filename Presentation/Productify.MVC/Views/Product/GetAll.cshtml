@using Productify.Domain.Entities
@model List<Product>

<h1>Product List Page</h1>


<div class="container mt-3">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>CreatedDate</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.CreatedOn</td>
                    <td>
                        @Html.ActionLink("Edit", "UpdateProduct", new { id = product.Id })
                    </td>
                </tr>
            }
            
        </tbody>
    </table>
</div>


